.dropdown-section
  border 1px solid bold #9E9E9E;

.dropdown-stuff
  border 1px solid #9e#9e9e9e


.dropdown
  border  1px solid #9E9E9E;
  h3
    padding 10px
.dropdown-toggle
  padding-left 20px
  text-decoration none
  color black

ul.dropdown-menu
  display none
  text-align center
  li
    list-style none
    text-align start
    padding-left 60px

.dropdown-menu  li a
  text-decoration none
  text-align right
  font-size 16px
  color black

.dropdown-menu  li a:hover
  color grey

.image_div
  position relative
  margin: auto;
  width: 85%

.main_image
  width:100%
  height:auto
  margin-bottom 20px
h3
  text-transform uppercase
  padding-bottom 20px
  font-weight bolder
.bt-1
  float right
  border none
  background-color white
  text-decoration underline
  color green




.small_images
  // flex container
  display flex
  justify-content flex-start
  padding-bottom 20px
  img
    height 100px
    width 100px
    padding-right 10px

