html,body

  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
  overflow-x: hidden;


@font-face
  font-family: 'IcoMoon-Free';
  src: url('IcoMoon-Free.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;


body
  font-family: 'Montserrat', sans-serif;
  color: black;
  margin 0 auto


header, main, footer
  width: 100%;
  margin: 0 auto;
  position: relative;

nav ul , footer ul
  list-style none
  background-color #19191E
  text-align center
  padding 0
  margin 0

nav ul li , footer ul li
  link-height 40px
  height 40px
  //border-bottom 1px solid #888
  display inline-block
  padding 20px

footer ul li
  //border-right 1px solid white;
  font-size small


nav ul li a , footer ul li a
  text-decoration: none;
  color: #fff;
  display: block;
nav ul li a:hover
  color grey

.contact-links
  display inline-block
  float right
  padding-right 100px
.contact-links a
  color #9e9e9e
  text-decoration none
  padding-top 5px
  padding-bottom 5px

footer ul li a
  display inline




// breadcrumbs nav
.breadcrumb
  list-style: none;
  overflow: hidden;
  font: 12px Helvetica, Arial, Sans-Serif;
  padding-left 20px

.breadcrumb li
  float: left;

.breadcrumb li a
  color: black;
  text-decoration: none;
  padding: 10px 0 10px 20px;
  position: relative
  display: block;
  float: left;

.breadcrumb li a:after
  content: "\2192"
  display: block;
  width: 0;
  height: 0;
  position: absolute;
  top: 50%;
  margin-top: -50px;
  left: 100%;
  z-index: 2;

 .title_section
    //display flex

 .title_section h1
    padding-top 20px
    margin-bottom  0
    padding-left 100px
    text-transform uppercase
    color greenyellow
 .title_section a
    display block
    text-align right

.search:before
  font-family 'IcoMoon-Free'
  content "\e986"
  height 50px
  width 50px
  color black



// main content

h1
  font-size 30
  font-weight bold
  margin-bottom 25px
  display inline-block
  padding-bottom 25px



.dropdown-section
  margin 0 20px 0 20px


.cart
  margin-top 90px
  margin-left 20px
  background-color purple
  border-radius 15px
  margin-left:-25px
  .quantity
    font-size 14px
    display inline-block
    margin-top: 10px;
    margin-right: 20px;
  input
    margin-bottom 3px
    display inline
    width 50px
    margin-right 10px
  label
    margin-right 20px
  label.cost
    margin-left  18px
  button
    background-color: cyan;
    border: none;
    border-radius: 10px;
    width: 100%;
    margin-top: 20px;
