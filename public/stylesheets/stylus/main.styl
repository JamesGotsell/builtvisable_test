//  footer

footer p
  text-align center

footer ul li a
  border-right 1px solid white
  padding-right 25px

.hamburger
  display: none;


@media only screen and (max-width: 660px)
  header nav ul li
    display: none;
  header nav ul li.open
    display block

  nav ul li a:hover
    color grey

  .dropdown-section
    display none

  .title_section h1
    margin-bottom 25px
    margin-left -25px

  .main_image
    max-width:100%
    height:auto
  .main_section
    padding 0
  .main_section p
    padding 10px

  .bt-1
    float right

  .cart
    width 100%
    margin 0;
    border-radius 0;
  .cart form button
    background-color: cyan;
    border: none;
    border-radius: 10px;
    width: 50%;
    margin-top: 20px;
    margin-left 20%

  .title_section a
    display none

  .hamburger
    display block
    text-align: right
  .hamburger:after
    font-family 'IcoMoon-Free'
    content "\e9bd"
    height 50px
    width 50px
    color white

  // footer mobile stlying
  footer ul
    flex
 //footer ul
 //  display flex
  footer ul li
    flex-wrap wrap
    link-height 20px
    height 20px
    display inline-block

